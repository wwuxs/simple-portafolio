---
interface Props {
  date: string;
  title: string;
  description: string;
  link: string;
}

const { date, title, description, link } = Astro.props as Props;
---

<div
  class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-neutral-700"
>
</div>
<time class="mb-1 text-lg font-normal leading-none text-zinc-400">{date}</time>
<h3
  class="text-2xl md:text-3xl font-semibold text-zinc-800/75 dark:text-zinc-200"
>
  {title}
</h3>
<p
  class="mb-4 text-lg md:text-xl font-normal text-zinc-400 text-justify text-pretty"
>
  {description}
</p>
<a
  href={link}
  class="inline-flex items-center px-4 py-2 text-lg font-medium rounded-lg focus:z-10 focus:outline-none bg-neutral-300 hover:bg-neutral-200 dark:bg-neutral-700 dark:hover:bg-neutral-800"
  >Ver mas <svg
    class="w-3 h-3 ms-2 rtl:rotate-180"
    aria-hidden="true"
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 14 10"
  >
    <path
      stroke="currentColor"
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M1 5h12m0 0L9 1m4 4L9 9"></path>
  </svg></a
>
