<form action="#" method="POST" class="w-full pt-4">
  <div class="grid grid-cols-1 gap-x-8 gap-y-6 sm:grid-cols-2">
    <div>
      <label
        for="first-name"
        class="block text-xl font-semibold leading-6 md:text-2xl">Nombre</label
      >
      <div class="mt-2.5">
        <input
          type="text"
          name="first-name"
          id="first-name"
          autocomplete="given-name"
          class="block w-full rounded-md border-0 px-3.5 py-3 text-xl shadow-sm"
        />
      </div>
    </div>
    <div>
      <label
        for="last-name"
        class="block text-xl font-semibold leading-6 md:text-2xl"
        >Apellido</label
      >
      <div class="mt-2.5">
        <input
          type="text"
          name="last-name"
          id="last-name"
          autocomplete="family-name"
          class="block w-full rounded-md border-0 px-3.5 py-3 shadow-sm text-xl"
        />
      </div>
    </div>
    <div class="sm:col-span-2">
      <label
        for="email"
        class="block text-xl font-semibold leading-6 md:text-2xl">Correo</label
      >
      <div class="mt-2.5">
        <input
          type="email"
          name="email"
          id="email"
          autocomplete="email"
          class="block w-full rounded-md border-0 px-3.5 py-3 shadow-sm text-xl"
        />
      </div>
    </div>
    <div class="sm:col-span-2">
      <label
        for="message"
        class="block text-xl font-semibold leading-6 md:text-2xl">Mensaje</label
      >
      <div class="mt-2.5">
        <textarea
          name="message"
          id="message"
          rows="4"
          class="block w-full rounded-md border-0 px-3.5 py-3 shadow-sm text-xl"
        ></textarea>
      </div>
    </div>
  </div>
  <div class="mt-10">
    <button
      type="submit"
      class="block w-full rounded-md bg-indigo-600 px-3.5 py-2.5 text-center text-xl md:text-2xl font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
      >Contactar</button
    >
  </div>
</form>
